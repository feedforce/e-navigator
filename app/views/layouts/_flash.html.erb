<% flash.each do |message_type, message| %>
  <% if notice %>
  <div class="alert alert-info">
    <%= notice %>
  </div>
  <% elsif alert %>
  <div class="alert alert-success">
    <%= alert %>
  </div>
  <% else %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
  <% end %>
<% end %>
