<!DOCTYPE html>
<html>

<head>
    <title>ENavigator</title>
    <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all' %>
            <%= javascript_include_tag 'application' %>
</head>

<body>
    <% if notice %>
        <p class="alert alert-success">
            <%= notice %>
        </p>
        <% end %>
            <% if alert %>
                <p class="alert alert-danger">
                    <%= alert %>
                </p>
                <% end %>
                    <%= yield %>
</body>

</html>