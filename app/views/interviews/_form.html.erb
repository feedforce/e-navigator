<% if @interview.errors.any? %>
  <div id="error_explanation" class="alert alert-danger" role="alert">
    <ul>
    <% @interview.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :面接日時 %><br />
  <%== sprintf(
    f.datetime_select(
    :datetime,
    use_month_numbers: true,
    start_year: Time.now.year,
    end_year: Time.now.year,
    minute_step: 30,
    date_separator: '%s'),
    '年', '月') + '日' %>
</div>
