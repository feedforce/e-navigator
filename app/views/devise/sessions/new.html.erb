<hr>
<h2>ログインフォーム</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h3>メールアドレス</h3>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h3>パスワード</h3>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

