<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <strong>
    <%= f.label :email %><br />
    </strong>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form_field" %>
  </div>

  <div class="field">
    <strong>
    <%= f.label :password %><br />
    </strong>
    <%= f.password_field :password, autocomplete: "off", class:"form_field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
