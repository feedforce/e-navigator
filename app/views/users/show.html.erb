<% if @user.name == nil %>
  <h2>新規ユーザーさんのプロフィール</h2>
<% else %>
  <h2><%= @user.name %>さんのプロフィール</h2>
<% end %>
<ul>
  <li>
    <td>メールアドレス：</td>
  <td><%= @user.email %></td><br>
  </li>
  <li>
    <td>性別：</td>
    <td><%= @user.sex_i18n %></td><br>
  </li>
  <li>
    <td>年齢：</td>
    <% if @user.age == nil %>
      <td>-歳</td><br>
    <% else %>
      <td><%= @user.age %>歳</td><br>
    <% end %>
  </li>
  <li>
    <td>学校：</td>
    <td><%= @user.school %></td><br>
  </li>
</ul>