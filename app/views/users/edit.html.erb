<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :male %>
      <%= f.check_box :sex,{:checked => "1"} %>

      <%= f.label :female %>
      <%= f.check_box :sex,{:checked => "0"} %>

      <%= f.label :birthday %>
      <%= f.number_field :birthday, class: 'form-control' %>

      <%= f.label :school %>
      <%= f.text_field :school, class: 'form-control' %>

      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>